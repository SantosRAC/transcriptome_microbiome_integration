// nextflow.config

// Define pipeline parameters
params {
    day_file   = null
    night_file = null
    output_dir = "./results"
}

// Define execution resources for processes
process {
    cpus = 2
    memory = '2 GB'
    time = '1h'

    conda = envs/microtrans.yml

      withName: 'correlationMerged' {
        publishDir = [
          
            def cwd = System.getProperty('user.dir')

            params.otu_table         = "${cwd}/results/merged_otu_table.tsv"
            params.expression_matrix = "${cwd}/samples/expresion_matrix.tsv"
            params.output_dir        = "${cwd}/results"
        ]
    }
}

// Enable local executor (default). Change to slurm or others if needed.
executor {
    name = 'local'
}

// Enable Conda support (optional)
conda {
    enabled = false
}

// Enable Docker/Singularity if you want containerized reproducibility
docker {
    enabled = false
}
singularity {
    enabled = false
}

// Optional: Set a default work directory
workDir = './work'
